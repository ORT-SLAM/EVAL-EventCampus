<div class="card shadow-sm border-0 h-100 d-flex flex-column" style="width: 18rem; overflow: hidden; border-radius: .75rem; min-height: 340px;">
    <img src="https://picsum.photos/seed/{{ event.id }}/600/300" class="card-img-top" alt="{{ event.titre }}" style="height: 160px; object-fit: cover;">
    <div class="card-body d-flex flex-column flex-grow-1">
        <h5 class="card-title mb-2 fw-semibold">{{ event.titre }}</h5>
        <p class="card-text small text-muted mb-2">
            <span class="me-1">📅</span>
            {{ event.date_debut|date('d/m/Y H:i') }} → {{ event.date_fin|date('d/m/Y H:i') }}
        </p>
        <p class="card-text small text-muted mb-3">
            <span class="me-1">📍</span>{{ event.lieu }}
        </p>
        {% set placesClass = event.places_disponibles > 0 ? 'success' : 'secondary' %}
        <div class="mb-2">
            <span class="badge rounded-pill text-bg-{{ placesClass }}">Places restantes: {{ event.places_disponibles }}</span>
        </div>
        <a href="{{ path('app_event_detail', {id: event.id}) }}" class="btn btn-primary w-100 mt-auto">Voir plus</a>
    </div>
</div>
